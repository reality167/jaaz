{
  "name": "Artbox",
  "version": "1.0.14",
  "description": "AI design agent local desktop app",
  "author": "weixuanfu",
  "main": "electron/main.js",
  "scripts": {
    "start": "cd react && npx vite build && cd .. && npm run start:electron",
    "dev:react": "cd react && npm run dev",
    "dev:electron": "cross-env NODE_ENV=development npx electron electron/main.js",
    "dev": "concurrently \"npm run dev:react\" \"npm run dev:electron\"",
    "start:frontend": "cd frontend && npm run dev",
    "start:electron": "npx electron electron/main.js",
    "prebuild": "npm run build:frontend && npm run build:server",
    "build:frontend": "cd react && npm run build",
    "build:server": "cd server && pyinstaller main.spec",
    "build:electron": "npm run prebuild && electron-builder",
    "build:win": "npm run prebuild && electron-builder --win",
    "build:mac": "npm run prebuild && electron-builder --mac",
    "build:linux": "npm run prebuild && electron-builder --linux",
    "test": "vitest",
    "test:run": "vitest run",
    "test:watch": "vitest --watch"
  },
  "publish": "always",
  "build": {
    "appId": "com.jaaz.app",
    "productName": "Artbox",
    "publish": {
      "provider": "github",
      "releaseType": "draft"
    },
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron/**/*",
      "package.json",
      "assets/icons/*",
      "node_modules/**/*",
      ".env"
    ],
    "extraResources": [
      {
        "from": "server/dist/",
        "to": "server/dist/",
        "filter": ["**/*"]
      },
      {
        "from": "react/dist/",
        "to": "react/dist/",
        "filter": ["**/*"]
      }
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "icon": "assets/icons/jaaz.icns",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "zip",
          "arch": ["x64", "arm64"]
        }
      ],
      "gatekeeperAssess": false,
      "hardenedRuntime": false,
      "entitlements": "entitlements.mac.plist",
      "entitlementsInherit": "entitlements.mac.plist",
      "notarize": false,
      "identity": null,
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "dmg": {
      "title": "Jaaz Installer",
      "icon": "assets/icons/jaaz.icns",
      "background": null,
      "contents": [
        {
          "x": 130,
          "y": 220,
          "type": "file"
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "window": {
        "width": 540,
        "height": 380
      }
    },
    "win": {
      "icon": "assets/icons/jaaz.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "artifactName": "${productName}-Setup-${version}.${ext}",
      "requestedExecutionLevel": "asInvoker"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Artbox"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    }
  },
  "devDependencies": {
    "@electron/notarize": "^3.0.1",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "^35.1.0",
    "electron-builder": "^24.0.0",
    "vitest": "^3.2.1"
  },
  "dependencies": {
    "7zip-min": "^2.1.0",
    "electron-updater": "^6.6.2",
    "got": "11.8.6",
    "os-proxy-config": "^1.1.2",
    "playwright": "^1.52.0",
    "playwright-extra": "^4.3.6",
    "playwright-extra-plugin-stealth": "^0.0.1"
  }
}
